<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="vdom" basedir="." default="jar">

    <property name="main-class" value="com.vdom.core.Game"/>

    <target name="clean" description="Delete all generated files">
        <delete dir="classes"/>
        <delete file="vdom.jar"/>
    </target>

    <target name="compile" description="Compiles the Task">
        <mkdir dir="classes"/>
        <javac source="1.5" target="1.5" srcdir="src" debug="true"
                destdir="classes"/>
    </target>

    <target name="jar" description="JARs the Task" depends="compile">
        <jar destfile="vdom.jar" basedir="classes"/>
    </target>

    <target name="testrun" depends="jar">
        <java classname="${main-class}" fork="true">
            <classpath>
                <path location="vdom.jar"/>
            </classpath>
            <arg value="-typeFirstGame"/>
            <arg value="-debug"/>
            <arg value="com.vdom.players.VDomPlayerDrew"/>
            <arg value="com.vdom.players.VDomPlayerEarl"/>
            <arg value="com.vdom.core.RemotePlayer*Matt"/>
            <arg value="com.vdom.core.RemotePlayer*Sabrina"/>
        </java>
    </target>
	
	<target name="run" depends="jar">
        <java classname="${main-class}" fork="true">
            <classpath>
                <path location="vdom.jar"/>
            </classpath>
            <arg line="${args}"/>
        </java>
    </target>
	
	<target name="input-runargs" unless="args" description="prompts for command line arguments if necessary">
		<input addProperty="args" message="Type the desired command line arguments:"/>
	</target>
	
	<target name="run4p-random-3set" depends="jar">
        <java classname="${main-class}" fork="true">
            <classpath>
                <path location="vdom.jar"/>
            </classpath>
            <arg value="-typeRandom"/>
            <arg value="-debug"/>
			<arg value="-limitrandom3"/>
            <arg value="com.vdom.core.RemotePlayer*Drew"/>
            <arg value="com.vdom.core.RemotePlayer*Earl"/>
            <arg value="com.vdom.core.RemotePlayer*Matt"/>
            <arg value="com.vdom.core.RemotePlayer*Sabrina"/>
        </java>
    </target>
	
	<target name="run4p-rand3set-excludeNew" depends="jar">
        <java classname="${main-class}" fork="true">
            <classpath>
                <path location="vdom.jar"/>
            </classpath>
            <arg value="-typeRandom"/>
            <arg value="-debug"/>
			<arg value="-limitrandom3"/>
			<arg value="-randomexcludes-Adventures-Empires-Nocturne-Renaissance"/>
            <arg value="com.vdom.core.RemotePlayer*Drew"/>
            <arg value="com.vdom.core.RemotePlayer*Earl"/>
            <arg value="com.vdom.core.RemotePlayer*Matt"/>
            <arg value="com.vdom.core.RemotePlayer*Sabrina"/>
        </java>
    </target>

    <target name="run2p-rand3set-excludeNew" depends="jar">
        <java classname="${main-class}" fork="true">
            <classpath>
                <path location="vdom.jar"/>
            </classpath>
            <arg value="-typeRandom"/>
            <arg value="-debug"/>
            <arg value="-limitrandom3"/>
            <arg value="-randomexcludes-Adventures-Empires-Nocturne-Renaissance"/>
            <arg value="com.vdom.players.VDomPlayerDrew"/>
            <arg value="com.vdom.players.VDomPlayerEarl"/>
            <arg value="com.vdom.core.RemotePlayer*Matt"/>
            <arg value="com.vdom.core.RemotePlayer*Sabrina"/>
        </java>
    </target>

    <target name="run2p-preset" depends="jar">
        <java classname="${main-class}" fork="true">
            <classpath>
                <path location="vdom.jar"/>
            </classpath>
            <arg value="${arg0}"/>
            <arg value="-debug"/>
            <arg value="com.vdom.players.VDomPlayerDrew"/>
            <arg value="com.vdom.players.VDomPlayerEarl"/>
            <arg value="com.vdom.core.RemotePlayer*Matt"/>
            <arg value="com.vdom.core.RemotePlayer*Sabrina"/>
        </java>
    </target>
    
    <target name="run2p-rand3set-excludeNoc" depends="jar">
        <java classname="${main-class}" fork="true">
            <classpath>
                <path location="vdom.jar"/>
            </classpath>
            <arg value="-typeRandom"/>
            <arg value="-debug"/>
            <arg value="-splitmaxeventsandlandmarks"/>
            <arg value="-eventcards-2"/>
            <arg value="-landmarkcards-2"/>
            <arg value="-limitrandom3"/>
            <arg value="-randomexcludes-Nocturne"/>
            <arg value="com.vdom.players.VDomPlayerDrew"/>
            <arg value="com.vdom.players.VDomPlayerEarl"/>
            <arg value="com.vdom.core.RemotePlayer*Matt"/>
            <arg value="com.vdom.core.RemotePlayer*Sabrina"/>
        </java>
    </target>
	
	<target name="run4p-rand3set-excludeNoc" depends="jar">
        <java classname="${main-class}" fork="true">
            <classpath>
                <path location="vdom.jar"/>
            </classpath>
            <arg value="-typeRandom"/>
            <arg value="-debug"/>
            <arg value="-splitmaxeventsandlandmarks"/>
            <arg value="-eventcards-2"/>
            <arg value="-landmarkcards-2"/>
            <arg value="-limitrandom3"/>
            <arg value="-randomexcludes-Nocturne"/>
            <arg value="com.vdom.core.RemotePlayer*Drew"/>
            <arg value="com.vdom.core.RemotePlayer*Earl"/>
            <arg value="com.vdom.core.RemotePlayer*Matt"/>
            <arg value="com.vdom.core.RemotePlayer*Sabrina"/>
        </java>
    </target>
	
	<target name="run4p-preset" depends="jar">
        <java classname="${main-class}" fork="true">
            <classpath>
                <path location="vdom.jar"/>
            </classpath>
            <arg value="${arg0}"/>
            <arg value="-debug"/>
            <arg value="com.vdom.core.RemotePlayer*Drew"/>
            <arg value="com.vdom.core.RemotePlayer*Earl"/>
            <arg value="com.vdom.core.RemotePlayer*Matt"/>
            <arg value="com.vdom.core.RemotePlayer*Sabrina"/>
        </java>
    </target>

</project>
